---
import Image from './Image.js';

const { work } = Astro.props;
---

<div class="gap-1 pt-4 columns-1 sm:columns-2 xl:columns-3">
  {Object.entries(work.data.attachments).map( attachment => <div class="overflow-hidden mb-1 shadow-xl">
    <img src={`/${attachment[1]}`} class="transition duration-300 ease-in-out hover:scale-108" />
    
  </div>)}
</div>
